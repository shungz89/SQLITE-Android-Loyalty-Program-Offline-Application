<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/durianz_green"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to Durianz"
        android:textColor="@color/durianz_white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"/>

    <ImageView
        android:src="@drawable/durianz"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:id="@+id/durianz_logo" />

    <Button
        android:id="@+id/transaction_page_button"
        android:text="Transaction" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button android:text="Create Account"
        android:id="@+id/create_account_page_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button android:text="Edit Account"
        android:id="@+id/edit_account_page_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>


</LinearLayout>
