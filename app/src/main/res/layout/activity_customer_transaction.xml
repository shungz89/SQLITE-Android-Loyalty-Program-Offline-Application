<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/durianz_green"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/transaction_customer_id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Key in Customer IC NO."
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/durianz"
            android:textColor="@color/durianz_white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/transaction_customer_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_rounded_square_textinput"
            android:hint="Customer IC NO. "
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:singleLine="true"
            android:digits="0123456789"
            android:inputType="number"
            />

        <Button
            android:id="@+id/transaction_customer_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/durianz_gray_30"/>



    <LinearLayout
        android:id="@+id/transaction_customer_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/transaction_customer_detail_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView android:text="IC NO:  " android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/durianz_white"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/transaction_customer_detail_id"
                android:text="D001" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/durianz_white"
                android:textSize="18sp"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/transaction_customer_detail_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:text="Name:  " android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/durianz_white"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/transaction_customer_detail_name"
                android:text="Mohammad Ali Bin Mohammad Aliz" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/durianz_white"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/transaction_customer_detail_credit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView android:text="Credit Balance (DZP):  " android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/durianz_white"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/transaction_customer_detail_credit"
                android:text="555.5" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/durianz_white"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transaction_buttons"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <Button
                android:id="@+id/transaction_spend_points_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Spend Points"/>

            <Button
                android:id="@+id/transaction_add_points_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Add Points"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
