<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/durianz_green"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/transaction_customer_detail_spending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView android:text="Spent (RM):  " android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/durianz_white"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/transaction_customer_spending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_rounded_square_textinput"
                android:inputType="numberDecimal"
                android:hint="0.00"
                android:singleLine="true"
                />

        </LinearLayout>

        <TextView android:text="RM 1 is equivalent to 0.1 DZP" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/durianz_white"
            android:textSize="18sp"
            />


        <LinearLayout
            android:id="@+id/transaction_customer_detail_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView android:text="Points (DZP):  " android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/durianz_white"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/transaction_customer_detail_points_text"
                android:text="-" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/durianz_white"
                android:textSize="18sp"
                />

        </LinearLayout>


        <Button
            android:id="@+id/add_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Points"/>

    </LinearLayout>