<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/durianz_green"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Key in Customer Details"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/durianz"
        android:textColor="@color/durianz_white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"/>




    <EditText
        android:id="@+id/create_account_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:hint="Full Name"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/durianz_user_icon"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        />

    <EditText
        android:id="@+id/create_account_ic_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="number"
        android:hint="Ic No."
        android:textSize="18sp"
        android:drawableLeft="@drawable/durianz_card_icon"
        android:digits="0123456789"
        android:drawablePadding="8dp"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/create_account_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:drawableLeft="@drawable/durianz_email_icon"
        android:drawablePadding="8dp"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/create_account_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Mobile No."
        android:inputType="phone"
        android:textSize="18sp"
        android:drawableLeft="@drawable/durianz_mobile_icon"
        android:digits="0123456789"
        android:drawablePadding="8dp"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/create_account_register_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="@color/durianz_dark_brown"
        android:backgroundTint="@color/durianz_yellow"
        android:textSize="18sp"
        android:text="Register"/>

</LinearLayout>
