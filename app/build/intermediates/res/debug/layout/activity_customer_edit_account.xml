<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/durianz_green"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CREATE NEW ACCOUNT"
        android:textColor="@color/durianz_white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"/>

    <ImageView
        android:src="@drawable/durianz"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:id="@+id/durianz_logo" />

    <EditText android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:hint="Full Name"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <EditText android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Ic No."
        />

    <EditText android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Email"
        />

    <EditText android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_rounded_square_textinput"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Mobile No."
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"/>

</LinearLayout>
